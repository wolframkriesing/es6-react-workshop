{
  "name": "es6-react-workshop",
  "version": "1.0.0",
  "description": "ES6+react.js workshop, es6katas page",
  "main": "index.js",
  "browser": {
    "react": "./src/shim/react.js"
  },
  "scripts": {
    "test": "npm run lint && mocha --compilers js:babel-core/register",
    "lint": "jscs test && jshint test",
    "build:app": "browserify src/index.js --outfile=dist/index.min.js --transform=babelify",
    "build:html": "cp src/index.html dist; cp -R vendor/pure-layout-email/css dist; cp -R vendor/pure-layout-email/img dist",
    "build": "mkdir -p dist; npm test && npm run build:app && npm run build:html",
    "watch:build": "chokidar 'src' -c 'npm run build'",
    "watch:build:app": "chokidar 'src' -c 'npm run build:app'"
  },
  "keywords": [
    "es6",
    "reactjs",
    "es6katas"
  ],
  "author": "Wolfram Kriesing, uxebu",
  "license": "MIT",
  "devDependencies": {
    "mocha": "^2.2.5",
    "jscs": "^1.13.1",
    "jshint": "^2.8.0",
    "babel-core": "^5.6.15",
    "browserify": "^10.2.4",
    "babelify": "^6.1.2",
    "react": "^0.13.3",
    "chokidar-cli": "^0.3.0",
    "chokidar": "^1.0.3"
  }
}
